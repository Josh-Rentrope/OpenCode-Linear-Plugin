{
  "name": "@opencode-ai/linear-plugin",
  "version": "1.0.0",
  "description": "Linear integration plugin for OpenCode with CRUD operations and webhook support",
  "main": "plugin/index.ts",
  "types": "plugin/index.ts",
  "scripts": {
    "dev:express": "node server/webhook-server-express.ts",
    "dev:netlify": "netlify functions serve",
    "build": "tsc",
    "build:netlify": "echo 'No build step required - Netlify functions are ready to deploy'",
    "start": "npm run dev:express",
    "dev:setup": "node scripts/setup.js",
    "test:webhook": "node scripts/test-webhook.js",
    "health:express": "curl http://localhost:3000/health",
    "health:netlify": "curl http://localhost:8888/health"
  },
  "dependencies": {
    "@linear/sdk": "^63.2.0",
    "@netlify/functions": "^2.0.0",
    "@opencode-ai/plugin": "0.15.31",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "keywords": [
    "linear",
    "opencode",
    "plugin",
    "crud",
    "webhook",
    "issues",
    "comments",
    "integration"
  ],
  "exports": {
    ".": {
      "types": "./plugin/index.ts",
      "import": "./plugin/index.ts"
    },
    "./webhook": {
      "types": "./plugin/webhook-plugin.ts",
      "import": "./plugin/webhook-plugin.ts"
    },
    "./auth": {
      "types": "./plugin/linear-auth.ts",
      "import": "./plugin/linear-auth.ts"
    },
    "./crud": {
      "types": "./plugin/linear-crud.ts",
      "import": "./plugin/linear-crud.ts"
    }
  },
  "author": "OpenCode Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
