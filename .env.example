# Linear Webhook Plugin Environment Variables
# Copy this file to .env and fill in your actual values

# Linear API Configuration
# Get your API key from: https://linear.app/settings/account/security
LINEAR_API_KEY=lin_api_your_actual_api_key_here

# Webhook Security
# Generate a secure random string for webhook signature verification
# You can generate one with: openssl rand -hex 32
LINEAR_WEBHOOK_SECRET=your_secure_webhook_secret_here

# Express Server Configuration (optional)
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhooks/linear
ENABLE_CORS=false

# Netlify Functions Configuration (optional)
NETLIFY_DEBUG=false

# Development Configuration (optional)
NODE_ENV=development